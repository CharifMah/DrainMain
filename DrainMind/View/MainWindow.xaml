<Window x:Name="FentrePrincipalDrainMain"
        x:Class="DrainMind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:DrainMind.Res"
        xmlns:local="clr-namespace:DrainMind"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1600" MinHeight="400" MinWidth="800" SizeChanged="Window_SizeChanged" Closed="FentrePrincipalDrainMain_Closed" KeyDown="FentrePrincipalDrainMain_KeyDown">

    <Grid>
        <ScrollViewer x:Name="CanvasViewer" HorizontalScrollBarVisibility="Hidden"  VerticalScrollBarVisibility="Hidden" PreviewMouseWheel="CanvasViewer_PreviewMouseWheel" PreviewKeyDown="CanvasViewer_PreviewKeyDown" >
            <Canvas x:Name="canvas" Height="4421" Width="6915">
                <Canvas.Background>
                    <ImageBrush ImageSource="/Sprites/fond.png"/>
                </Canvas.Background>
            </Canvas>

        </ScrollViewer>
        <Canvas  x:Name="UI"/>
        <StackPanel x:Name="StackPanelPause" Visibility="Hidden" VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock x:Name="PauseTextBlock" Text="{x:Static res:Strings.Pause}" FontSize="40"/>
        </StackPanel>
    </Grid>
</Window>
